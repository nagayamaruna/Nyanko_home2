<h2>コメント一覧</h2>
<div class="row my-4">
  <div class="col-md-6">
    <%= form_with url: admin_nyankogram_post_comments_path, method: :get do |f| %>
      <div class="row">
        <div class="col-md-10">
          <%= f.search_field :keyword, value: params[:keyword], placeholder: "ID/名前/コメントから検索できます", class: "form-control" %>
        </div>
        <div class="col-md-2">
          <%= f.submit "検索", class: "btn btn-primary btn-block" %>
        </div>
      </div>
    <% end %>
  </div>
</div>

<div class="my-4">
  <% if @nyankogram_post_comments.any? %>
    <table class="table table-bordered">
      <thead>
        <tr>
          <th>id</th>
          <th>name</th>
          <th>comment</th>
          <th></th>
        </tr>
      </thead>
      <tbody>
        <% @nyankogram_post_comments.each do |comment| %>
          <tr>
            <td><%= comment.id %></td>
            <td><%= comment.user.name %></td>
            <td><%= comment.comment %></td>
            <td><%= link_to "削除", admin_nyankogram_post_comment_path(comment), method: :delete, data: { confirm: "本当に削除しますか？" }, class: "btn btn-outline-danger" %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  <% else %>
    <p>該当するレコードがありません</p>
  <% end %>
</div>