
<div class="row">
  <div class="col-md-6 offset-md-3">
    <div class="DM">
      <h2>DM一覧</h2>
    </div>
<% @another_entries.each do |entry| %>

    <div class="card">
      <div class="card-body">
           <div class="d-flex">
              <div class="chat-avatar">
                <object>
                  <%= link_to user_path(entry.user) do %>
                    <%= image_tag entry.user.get_image(50,50) %>
                  <% end %>
                  <%= entry.user.name %>
                </object>
              </div>
          </div>
          <div class="dm-text">
            <i class="fa-regular fa-envelope"></i>
            <%= link_to room_path(entry.room) do %>
              <%= Message.find_by(id: entry.room.message_ids.last)&.dm_body %>
            <% end %>
          </div>
      </div>
    </div>
<% end %>
  </div>
</div>