
<div class="row">
  <div class="col-lg-6 mx-auto">
    <h1>ニャンコグラム</h1>
    
    <% if @nyankogram.errors.any? %>
    <%= @nyankogram.errors.count %>件のエラーが発生しました
      <ul>
        <% @nyankogram.errors.full_messages.each do |message| %>
        <li><%= message %></li>
        <% end %>
      </ul>
    <% end %>
    
    <%= form_with model: @nyankogram do |f| %>

    <p></p>
      <h4>画像</h4>
      <%= f.file_field :nyankogram_image, accept: "image/*" %>

    <p></p>
      <h4>説明</h4>
      <%= f.text_area :post_body,size: "65x2" %>
      <%= f.submit '投稿' %>
    <% end %>
  </div>
</div>