<%= flash[:notice] %>

<div class="row">
  <div class="col-md-11 offset-md-1">
    <table class="table">
      <thead>
        <tr>
          <th>
            <%= link_to user_path(@user) do %>
              <%= image_tag @user.get_image(50, 50) %>
            <% end %>
          </th>
          <th>
            <%= @nyanko.user.name %>
          </th>
          <% if @nyanko.user == current_user %>
          <th>
            <%= link_to "編集", "#{edit_nyanko_path(@nyanko.id)}", class: "btn btn-outline-secondary btn-sm"%>
          </th>
          <th>
            <%= link_to "Destroy", "#{nyanko_path(@nyanko.id)}", method: :delete, class: "btn btn-outline-secondary btn-sm"%>
          </th>
          <% end %>
        </tr>
      </thead>
      <tbody>
        <tr>
          <td>
            <%= image_tag @nyanko.image, :size =>'500x500' %>
            <%= @nyanko.title %>
          </td>
          <td>
            <%= @nyanko.body %>
          </td>
          <td>
            <%= @nyanko.created_at.strftime('%Y/%m/%d') %>
          </td>
        </tr>
      </tbody>
    </table>
  </div>
</div>

