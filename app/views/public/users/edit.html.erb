
<div class="row">
  <div class="col-lg-6 mx-auto">
    <h2>プロフィール編集</h2>
      <%= form_with model: @user do |f| %>
      <p></p>
        <label for="inputName">名前</label>
          <%= f.text_field :name, autofocus: true, id:"inputName", placeholder:"名前"%>
      <p></p>
        <label for="inputImage">プロフィール画像</label>
          <%= f.file_field :profile_image, placeholder: "プロフィール画像", accept: "image/*" %>
      <p></p>
      <p>
        <%= f.submit "変更を保存" %>
      </p>
      <% end %>

      <div class="row">
        <div class="col-8 col-md-7 mx-auto">
          <% unless @user.guest_user? %>
            <% if @user.email != "guest@example.com" %>
              <%= link_to "ゲストユーザーは変更できません",edit_user_path(@user),class: "edit_user_#{@user.id}" %>
            <% end %>
          <% end %>
        </div>
      </div>

  </div>
</div>
