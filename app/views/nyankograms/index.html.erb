<%= link_to "投稿", new_nyankogram_path, class: "btn btn-outline-secondary btn-sm"%>

<%= flash[:notice] %>

<% @nyankograms.each do |nyankogram| %>

  <%= image_tag nyankogram.nyankogram_image.variant(resize_to_fill: [60, 60]) %>

  <%= image_tag nyankogram.user.get_image(100,100) %>

  <p><%= nyankogram.user.name %></p>

  <p><%= nyankogram.post_body %></p>

  <div>
    <%= link_to "詳細", nyankogram_path(nyankogram) %>
  </div>

</div>
<% end %>