<h1>里親募集フォーム</h1>

<% if @nyanko.errors.any? %>
  <%= @nyanko.errors.count %>件のエラーが発生しました
  <ul>
    <% @nyanko.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>

<%= form_with model: @nyanko do |f| %>

  <h4>写真</h4>
  <%= f.file_field :image, accept: "image/*" %>
  
  <h4>タイトル</h4>
  <%= f.text_field :title %>
  
  <h4>説明</h4>
  <%= f.text_area :body %>
  
  <%= f.submit '投稿' %>
<% end %>